<%= form_for :job, url: jobs_path do |f| %>
  
  <% if @job.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@job.errors.count, "error") %> 
        prohibited this Job Posting from being saved:</h2>
    <ul>
    <% @job.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>


<div class="row">
<div class="col-md-6 col-md-offset-3">
 	<div class="form-group">
    Company Name
 		<%= f.text_field :company_name %>
 	</div>

 	<div class="form-group">
    Company Logo
    <%= f.file_field :company_logo %>
  </div>

  <div class="form-group">
    Job Description
    <%= f.text_area :job_description %>
  </div>

  <div class="action">
    <%= f.submit "Submit", class: "btn btn-primary"%>
  </div>

  <% end %>
  </div>
  </div>